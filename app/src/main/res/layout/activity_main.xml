<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="#000000">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearlayout2"
        android:orientation="horizontal"
        android:layout_weight="3">
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/EditText"
            android:hint="0"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#ffffff"
            android:background="#000000"
            android:textColor="#ffffff"
            android:layout_gravity="fill_horizontal"
            android:padding="11dp"
            android:clickable="false"
            android:gravity="top|center_horizontal|right"/></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/linear2"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row1"
            android:orientation="horizontal"
            android:layout_weight="1">


            <Button android:id="@+id/c"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="C"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:onClick="C"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/mc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="MC"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:onClick="MC"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/mr"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="MR" android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:onClick="MR"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/m"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="M+"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="#fa7800"
                android:textColor="#ffffff"

                android:onClick="M+"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row2"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button android:id="@+id/back"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Back"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.67"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:onClick="Back"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/n"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="N"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="N"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/div"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="/"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:onClick="Div"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row3"
            android:orientation="horizontal"
            android:layout_weight="1">


            <Button android:id="@+id/int7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="7"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:onClick="Number_7"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/int8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="8"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Number_7"

                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/int9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="9"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Number_9"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/multi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="*"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Multi"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row4"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button android:id="@+id/int4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="4"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:onClick="Number_4"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp" />
            <Button android:id="@+id/int5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="5"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Number_5"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/int6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="6"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Number_6"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/sub"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="-"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Sub"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row5"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button android:id="@+id/int1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="1"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:onClick="Number_1"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp" />
            <Button android:id="@+id/int2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="2"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Number_2"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/int3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="3"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Number_3"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />
            <Button android:id="@+id/add"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="+"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:onClick="Add"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row6"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button android:id="@+id/int0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="0"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:background="#ccc8c8"
                android:textColor="#000000"
                android:onClick="Number_0"
                android:layout_weight=".33"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp" />
            <Button android:id="@+id/equal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="="
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="#fa7800"
                android:textColor="#ffffff"
                android:onClick="Equals"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>